  "image": "wcs-logo.png",
  "searchTags": [],
  "dist": {
    "basePath": "dist/bundle/noi-a22-traffic-forecast",
    "files": [
      "noi-a22-traffic-forecast.js",
      "i18n_en.json",
      "i18n_it.json"
    ],
    "scripts": [
      {
        "file": "noi-a22-traffic-forecast.js",
        "parameter": "type='module'"
      }
    ]
  },
  "configuration": {
    "tagName": "noi-a22-traffic-forecast",
    "options": [
      {
        "key": "location",
        "type": "select",
        "label": "Forecast location",
        "required": true,
        "options": {
          "values": [
            "Brennero",
            "Bolzano",
            "Verona"
          ]
        }
      },
      {
        "key": "layout",
        "type": "select",
        "label": "Layout appearance",
        "required": false,
        "options": {
          "values": [
            "desktop",
            "mobile",
            "auto"
          ],
          "default": "auto"
        }
      },
      {
        "key": "language",
        "type": "select",
        "label": "Two letter key for the language to be used, if omitted the widget will use the browser language. Fallback is `en`",
        "required": false,
        "options": {
          "values": [
            "en",
            "it"
          ],
          "default": "en"
        }
      },
      {
        "key": "style",
        "type": "text",
        "label": "CSS style definition",
        "required": false,
        "options": {
          "default": " --color-primary: #0068B4; --color-primary-rgb: 0, 104, 180; --color-secondary: #00A767; --color-secondary-rgb: 0, 167, 103; --color-text: #333333; --color-background: #FFFFFF; --color-background-shade: #F7F7F7; --color-border: #d0d0d0; --color-footer: #0068b4; --color-footer-contrast: #FFFFFF; --color-busy-regular: #18a767; --color-busy-regular-contrast: #FFFFFF; --color-busy-severe: #fab813; --color-busy-severe-contrast: #FFFFFF; --color-busy-heavy: #e62243; --color-busy-heavy-contrast: #FFFFFF; --color-busy-critical: #000000; --color-busy-critical-contrast: #FFFFFF; --busy-box-size: 3em;"
        }
      }
    ]
  }
}
